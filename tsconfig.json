{
  "compilerOptions": {
    "lib": ["dom", "es2017", "esnext"],
    "module": "commonjs",
    "target": "es2017",

    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,

    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,

    // The settings below are required by Next.js and will be forcefully added when removed,
    // see https://github.com/zeit/next.js/issues/8128

    // These options are set to their default value - they need to be stated explicitly, otherwise, Next.js overrides this file
    "allowJs": false,
    "moduleResolution": "node",

    // These values are required by Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", ".next", "out", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
